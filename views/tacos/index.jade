extend ../layout

block content
  .container
    h1 My Tacos
    .row
      .col-md-6
        table.table.table-bordered.table-striped
          thead
            tr
              th Shell
              th Taste
          tbody
            for taco in tacos
              tr
                td= taco.shell
                td= taco.taste
        h3 Add a Taco
        form.form-horizontal(action='/tacos', method='POST')
          .form-group
            label.col-sm-2.control-label(for='shell') Shell
            .col-sm-10
              input#shell.form-control(type='text', name='shell' placeholder='Shell Type')
          .form-group
            label.col-sm-2.control-label(for='taste') Taste
            .col-sm-10
              input#taste.form-control(type='text', name='taste' placeholder='How did the taco taste??')
          .form-group
            input.btn.btn-success(type='submit' value='Add Taco')

        
